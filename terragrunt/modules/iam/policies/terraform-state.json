{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "s3:CreateBucket",
                "s3:PutObject",
                "s3:GetObject",
                "dynamodb:CreateTable",
                "dynamodb:PutItem",
                "dynamodb:UpdateItem",
                "dynamodb:DeleteItem",
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:Query"
            ],
            "Resource": [
                "arn:aws:s3:::${environment}-remote-state-terraform-bucket",
                "arn:aws:s3:::${environment}-remote-state-terraform-bucket/*",
                "arn:aws:dynamodb:${region}:${account_id}:table/${environment}-terraform-lock-table"
            ]
        }
    ]
}
