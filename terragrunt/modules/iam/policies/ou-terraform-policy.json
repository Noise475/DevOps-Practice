{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
                "ec2:*",
                "iam:*",
                "kms:*",
                "organizations:*",
                "s3:*",
                "ssm:*",
                "sso:*",
                "dynamodb:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:RequestTag/Org_ID": "${environment}"
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "ec2:*",
                "iam:*",
                "kms:*",
                "organizations:*",
                "s3:*",
                "ssm:*",
                "sso:*",
                "dynamodb:*"
            ],
            "Resource": "*",
            "Condition": {
                "StringEquals": {
                    "aws:ResourceTag/Org_ID": "${environment}"
                }
            }
        },
        {
            "Effect": "Allow",
            "Action": [
                "ssm:DescribeParameters",
                "ssm:GetParametersByPath",
                "ssm:getParameter",
                "s3:HeadBucket",
                "s3:GetObject",
                "s3:ListBucket",
				"kms:DeleteAlias",
				"kms:ListAliases",
				"kms:CreateAlias",
				"kms:UpdateAlias",
				"kms:GetPublicKey",
				"kms:GetParametersForImport",
				"kms:GetKeyRotationStatus",
				"kms:GetKeyPolicy",
				"kms:DescribeKey",
				"kms:DescribeCustomKeyStores",
				"kms:ListGrants",
				"kms:ListKeyPolicies",
				"kms:ListKeyRotations",
				"kms:ListKeys",
				"kms:ListResourceTags",
				"kms:ListRetirableGrants",
                "kms:ScheduleKeyDeletion"
            ],
            "Resource": "*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:ListBucket"
            ],
            "Resource": "arn:aws:s3:::root-remote-state-tf-bucket"
        },
        {
            "Effect": "Allow",
            "Action": [
                "s3:GetObject"
            ],
            "Resource": "arn:aws:s3:::root-remote-state-tf-bucket/*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:DescribeTable",
                "dynamodb:GetItem",
                "dynamodb:PutItem"
            ],
            "Resource": "arn:aws:dynamodb:${region}:${account_id}:table/${table_name}"
        }
    ]
}