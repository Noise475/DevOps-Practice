{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "dynamodb.amazonaws.com"
      },
      "Action": "dynamodb:GetItem",
      "Resource": "arn:aws:dynamodb:your-region:your-account-id:table/your-lock-table-name"
    },
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "dynamodb.amazonaws.com"
      },
      "Action": "dynamodb:PutItem",
      "Resource": "arn:aws:dynamodb:your-region:your-account-id:table/your-lock-table-name"
    }
  ]
}
