{
  "Version": "2012-10-17",
  "Id": "TerraformStatePolicy",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Service": "arn:aws:iam::${account_id}:role/${environment}"
      },
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::${environment}-terraform-state-bucket",
        "arn:aws:s3:::${environment}-terraform-state-bucket/*"
      ]
    }
  ]
}