{
    "Version": "2012-10-17",
    "Id": "PrivateSubnetKey",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "arn:aws:iam::${account_id}:role/${environment}"
            },
            "Action": [
                "kms:Encrypt",
                "kms:Decrypt",
                "kms:ReEncrypt*",
                "kms:GenerateDataKey*"
            ],
            "Resource": "*"
        }
    ]
}