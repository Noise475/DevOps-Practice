{
    "Version": "2012-10-17",
    "Id": "PrivateSubnetKey",
    "Statement": [
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "ec2.amazonaws.com"
            },
            "Action": "kms:Encrypt",
            "Resource": "private_subnet_key"
        },
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "ec2.amazonaws.com"
            },
            "Action": "kms:Decrypt",
            "Resource": "private_subnet_key"
        },
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "ec2.amazonaws.com"
            },
            "Action": "kms:ReEncrypt*",
            "Resource": "private_subnet_key"
        },
        {
            "Effect": "Allow",
            "Principal": {
                "Service": "ec2.amazonaws.com"
            },
            "Action": "kms:GenerateDataKey*",
            "Resource": "private_subnet_key"
        }
    ]
}
