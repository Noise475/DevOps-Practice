{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TFAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::590183659157:role/${environment}",
          "arn:aws:iam::590183659157:role/terraform_role"
        ]
      },
      "Action": [
        "s3:*"
      ],
      "Resource": [
        "arn:aws:s3:::${environment}-remote-state-tf-bucket",
        "arn:aws:s3:::${environment}-remote-state-tf-bucket/*"
      ]
    }
  ]
}