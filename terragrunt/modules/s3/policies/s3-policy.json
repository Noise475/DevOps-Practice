{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "TFAccess",
      "Effect": "Allow",
      "Principal": {
        "AWS": [
          "arn:aws:iam::503489311732:role/${environment}",
          "arn:aws:iam::503489311732:role/terraform_role"
        ]
      },
      "Action": [
        "s3:GetBucketLocation",
        "s3:GetBucketPolicy",
        "s3:GetObject",
        "s3:ListBuckets",
        "s3:PutBucketPolicy",
        "s3:PutObject"
      ],
      "Resource": [
        "arn:aws:s3:::${environment}-remote-state-terraform-bucket",
        "arn:aws:s3:::${environment}-remote-state-terraform-bucket/*"
      ]
    }
  ]
}